<?xml version="1.0" encoding="utf-8"?>
<r id="rusmyv" xml:lang="rus">
<e>
   <lg>
     <l pos="Pcle">аж</l>
   </lg>
   <mg><posType>прост.</posType>
     <tg xml:lang="myv">
       <t pos="Pcle">мик</t>
     </tg>
   </mg>
</e>
<e>
   <lg>
     <l pos="Pcle">бы</l>
   </lg>
   <mg><arab>1.</arab>
     <tg xml:lang="myv">
       <t pos="Pcle">(<i>передаётся сослагательным наклонением</i>) <b>сейчас я поел бы</b> ней ярсавлинь</t>
     <xg><x>отдохнул бы</x>
       <xt xml:lang="myv">оймсевлинь</xt>
     </xg>
     <xg><x>прилёг бы</x>
       <xt xml:lang="myv">мадевлинь</xt>
     </xg>
     <xg><x>не ушибся бы</x>
       <xt xml:lang="myv">аволь томбаво</xt>
     </xg>
     </tg>
   </mg>
   <mg><arab>2.</arab>
     <tg xml:lang="myv">
       <t pos="Pcle">(<i>после союза если</i>) кабу</t>
     <xg><x>если бы ты пришёл</x>
       <xt xml:lang="myv">… кабу савлить …</xt>
     </xg>
     </tg>
   </mg>
</e>
<e>
   <lg>
     <l pos="Pcle">было</l>
   </lg>
   <mg>
     <tg xml:lang="myv">
       <t pos="Pcle">(<i>передается желательным наклонением</i>): <b>пошел было</b> моликсэлинь</t>
     </tg>
   </mg>
</e>
<e>
   <lg>
     <l pos="Pcle">вряд ли</l>
   </lg>
   <mg>
     <tg xml:lang="myv">
       <t pos="Pcle">улема</t>
     <xg><x>вряд ли они приедут сегодня</x>
       <xt xml:lang="myv">улема, а сыть сынь течи</xt>
     </xg>
     </tg>
   </mg>
</e>
<e>
   <lg>
     <l pos="Pcle">именно</l>
   </lg>
   <mg><arab>1.</arab>
     <tg xml:lang="myv">
       <t pos="Pcle">лиякс меремс</t>
     <xg><x>здесь растут лиственные деревья, а именно: дуб, берёза и т. п.</x>
       <xt xml:lang="myv">тесэ касыть лопав чувтот, лиякс меремс: тумо, килей, ды истя седе тов</xt>
     </xg>
     </tg>
   </mg>
   <mg><arab>2.</arab>
     <tg xml:lang="myv">
       <t pos="Pcle">(<i>как раз</i>) вана, ансяк, как раз, точна</t>
     <xg><x>именно ты мне нужен</x>
       <xt xml:lang="myv">тон вана монень эряват</xt>
     </xg>
     <xg><x>сколько именно</x>
       <xt xml:lang="myv">точна зяро?</xt>
     </xg>
     <xg><x>кто именно?</x>
       <xt xml:lang="myv">кие точна?</xt>
     </xg>
     </tg>
   </mg>
</e>
<e>
   <lg>
     <l pos="Pcle">-ка</l>
   </lg>
   <mg><range>разг.</range>
     <tg xml:lang="myv">
       <t pos="Pcle">(<i>при глаг. повел. накл.</i>) -ка(як), <i>или не переводится</i></t>
     <xg><x>купите-ка мне эту книгу</x>
       <xt xml:lang="myv">раминка(як)/раминк монень те книганть</xt>
     </xg>
     <xg><x>иди-ка отсюда</x>
       <xt xml:lang="myv">азёка тестэ</xt>
     </xg>
     </tg>
   </mg>
   <mg><arab>2.</arab><range>разг.</range>
     <tg xml:lang="myv">
       <t pos="Pcle">(<i>при глаг. буд. вр.</i>) -гак, -як</t>
     <xg><x>заеду-ка я к соседу</x>
       <xt xml:lang="myv">совангак шабрантень</xt>
     </xg>
     </tg>
   </mg>
</e>
<e>
   <lg>
     <l pos="Pcle">пусть</l>
   </lg>
   <mg>
     <tg xml:lang="myv">
       <t pos="Pcle">кадык</t>
     </tg>
   </mg>
</e>
<e>
   <lg>
     <l pos="Pcle">угодно</l>
   </lg>
   <mg>
     <tg xml:lang="myv">
       <t pos="Pcle">кода/косо мелеть</t>
     <xg><x> где угодно</x>
       <xt xml:lang="myv">косо мелень</xt>
     </xg>
     <xg><x>как угодно</x>
       <xt xml:lang="myv">кода мелеть</xt>
     </xg>
     <xg><x>когда угодно</x>
       <xt xml:lang="myv">зярдо мелеть</xt>
     </xg>
     <xg><x>как тебе угодно</x>
       <xt xml:lang="myv">кода мелеть / кода теть эряви</xt>
     </xg>
     </tg>
   </mg>
</e>
</r>
